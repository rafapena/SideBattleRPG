<base:_TableTemplateOperations
    x:Class="Database.TableTemplates._GenericTable"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:base="clr-namespace:Database.TableTemplates"
    mc:Ignorable="d" 
    d:DesignHeight="300" d:DesignWidth="300">
    <Viewbox>
        <StackPanel Margin="5 5 5 5">

            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="Title" Height="20" Margin="0 0 2 5"/>
                <Button Content="Add" Click="AddRow" Background="#afa" Width="50" Height="20" Margin="0 0 0 5"/>
            </StackPanel>
            <ScrollViewer Margin="0 5 0 0" Height="100">
                <Grid x:Name="TableList" ScrollViewer.CanContentScroll="True" VerticalAlignment="Top"/>
            </ScrollViewer>

        </StackPanel>
    </Viewbox>
</base:_TableTemplateOperations>
