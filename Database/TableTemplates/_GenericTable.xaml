<base:_TableTemplateOperations
    x:Class="Database.TableTemplates._GenericTable"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:base="clr-namespace:Database.TableTemplates"
    mc:Ignorable="d" 
    d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>

        <TextBlock Text="Name" FontWeight="Bold" Margin="2 0 0 0"/>
        <StackPanel Orientation="Horizontal">
            <Button Content="Add" Click="AddRow" Background="#afa" Width="50" Height="20" Margin="2 2 2 5"/>
            <Button Content="Remove" Click="RemoveRow" Background="#faa" Width="50" Height="20" Margin="2 2 2 5"/>
        </StackPanel>
        <Grid Name="TableName"/>
        
    </StackPanel>
</base:_TableTemplateOperations>
