<Page x:Class="Database.Classes.Player"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:base="clr-namespace:Database.BaseControls"
      xmlns:template="clr-namespace:Database.ClassTemplates"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Player">
    <Viewbox>
        <StackPanel>
            <base:NavBar x:Name="Header"/>
            <StackPanel Orientation="Horizontal">
                <base:TableList x:Name="ObjectList"/>
                <StackPanel Orientation="Vertical">

                    <TabControl>
                        <TabItem Header="General">
                            <template:BaseObject x:Name="Base"/>
                        </TabItem>
                        
                        <TabItem Header="Rates">
                            <!-- Insert here -->
                        </TabItem>

                        <TabItem Header="Statistics">
                            <!-- Insert here -->
                        </TabItem>
                    </TabControl>

                    <base:Footer x:Name="FooterButtons"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Viewbox>
</Page>
