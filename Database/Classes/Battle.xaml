<base:_ClassOperations
    x:Class="Database.Classes.Battle"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:control="clr-namespace:Database.BaseControls"
    xmlns:base="clr-namespace:Database.Classes"
    xmlns:template="clr-namespace:Database.ClassTemplates"
    xmlns:tables="clr-namespace:Database.TableTemplates"
    mc:Ignorable="d" 
    d:DesignHeight="300" d:DesignWidth="300"
    Title="_GenericTemplate">
    <Viewbox>
        <StackPanel>
            <control:NavBar x:Name="Header"/>
            <StackPanel Orientation="Horizontal">
                <control:TableList x:Name="ObjectList"/>
                <StackPanel Orientation="Vertical">

                    <TabControl>
                        <TabItem Header="General">
                            <template:BaseObject x:Name="Base" Margin="5,5,5,5"/>
                        </TabItem>
                        
                        <TabItem Header="Enemies">
                            <ScrollViewer Width="900" Height="300" HorizontalScrollBarVisibility="Visible">
                                <Grid Margin="20 20 20 20" Width="1200" Height="600">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <template:BattleEnemy x:Name="EnemyTL" Grid.Row="0" Grid.Column="0"/>
                                    <template:BattleEnemy x:Name="EnemyTC" Grid.Row="0" Grid.Column="1"/>
                                    <template:BattleEnemy x:Name="EnemyTR" Grid.Row="0" Grid.Column="2"/>
                                    <template:BattleEnemy x:Name="EnemyCL" Grid.Row="1" Grid.Column="0"/>
                                    <template:BattleEnemy x:Name="EnemyCC" Grid.Row="1" Grid.Column="1"/>
                                    <template:BattleEnemy x:Name="EnemyCR" Grid.Row="1" Grid.Column="2"/>
                                    <template:BattleEnemy x:Name="EnemyBL" Grid.Row="2" Grid.Column="0"/>
                                    <template:BattleEnemy x:Name="EnemyBC" Grid.Row="2" Grid.Column="1"/>
                                    <template:BattleEnemy x:Name="EnemyBR" Grid.Row="2" Grid.Column="2"/>
                                </Grid>
                            </ScrollViewer>
                        </TabItem>

                        <TabItem Header="Scenes">
                            <StackPanel Margin="5,5,5,5">
                                <!-- Insert here -->
                            </StackPanel>
                        </TabItem>

                        <TabItem Header="Scenes">
                            <StackPanel Margin="5,5,5,5">
                                <!-- Insert here -->
                            </StackPanel>
                        </TabItem>
                    </TabControl>

                    <control:Footer x:Name="FooterButtons"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Viewbox>
</base:_ClassOperations>
